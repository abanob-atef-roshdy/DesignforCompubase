        android:max="100"
        android:layout_marginLeft="16dp"
        android:secondaryProgress="100"
        android:progressDrawable="@drawable/circular3"
        app:layout_constraintRight_toRightOf="@+id/tv_gheabBdon"
        app:layout_constraintLeft_toLeftOf="@+id/tv_gheabBdon"
