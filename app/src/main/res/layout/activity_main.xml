<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="نسبة الحضور و الغياب بعذر او بدون"
        android:textAlignment="center"
        android:fontFamily="@font/new_font2"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_hodor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/parent"
        android:background="#D3D3D3"
        />

    <TextView
        android:id="@+id/tv_hodor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/new_font2"
        app:layout_constraintLeft_toLeftOf="@+id/circular_green"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="الحضور"
        app:layout_constraintRight_toRightOf="@+id/parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_header"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/tv_gheabbe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="غياب بعذر"
        android:fontFamily="@font/new_font2"
        app:layout_constraintHorizontal_bias="0.5"
        android:foregroundGravity="center_horizontal"
        app:layout_constraintRight_toRightOf="@+id/parent"
        app:layout_constraintLeft_toLeftOf="@+id/parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_header" />

    <TextView
        android:id="@+id/tv_gheabBdon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/new_font2"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="غياب بدون عذر"
        app:layout_constraintLeft_toLeftOf="@+id/parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_header" />

