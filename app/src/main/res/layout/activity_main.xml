        android:background="@android:color/black"
        app:layout_constraintLeft_toLeftOf="@+id/tv_header"
        app:layout_constraintRight_toRightOf="@+id/tv_header"
        app:layout_constraintTop_toBottomOf="@+id/tv_header" />
    <ProgressBar
        android:id="@+id/circular_green"
        android:layout_width="90dp"
        android:layout_height="90dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminate="false"
        android:layout_marginRight="16dp"
        android:progress="65"
        android:max="100"
        android:secondaryProgress="100"
        android:progressDrawable="@drawable/circular"
        app:layout_constraintTop_toBottomOf="@+id/tv_hodor"
        app:layout_constraintRight_toRightOf="@+id/parent"
        />
    <ProgressBar
        android:id="@+id/circular_orange"
        android:layout_width="90dp"
        android:layout_height="90dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminate="false"
        android:foregroundGravity="center_horizontal"
        android:progress="20"
        android:max="100"
        android:secondaryProgress="100"
        android:progressDrawable="@drawable/circular2"
        app:layout_constraintRight_toRightOf="@+id/tv_gheabbe"
        app:layout_constraintLeft_toLeftOf="@+id/tv_gheabbe"
        app:layout_constraintTop_toBottomOf="@+id/tv_gheabbe"
